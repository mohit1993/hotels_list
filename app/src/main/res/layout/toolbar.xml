<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/value_10"
    android:layout_marginTop="@dimen/value_10"
    android:layout_marginEnd="@dimen/value_10">

    <TextView
        android:id="@+id/text_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_drawable"
        android:gravity="center"
        android:paddingStart="@dimen/value_7"
        android:paddingTop="@dimen/value_4"
        android:paddingEnd="@dimen/value_7"
        android:paddingBottom="@dimen/value_4"
        android:text="@string/search_hint"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_10"
        android:layout_marginEnd="@dimen/value_10"
        android:layout_toLeftOf="@+id/iv_menu"
        android:src="@drawable/ic_dehaze_pink_24dp" />

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingStart="@dimen/value_5"
        android:paddingEnd="@dimen/value_5"
        android:src="@drawable/ic_filter_list_grey_24dp"/>

</RelativeLayout>